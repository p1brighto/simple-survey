<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

  <section id="top-banner" class="section bg-intro intro-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 page-title">
          <h2>Edit your survey : <span class="capitalize edit-title"><%= survey.surveyTitle %></span></h2>
        </div>
      </div>
    </div>
  </section>

  <section id="user-profile" class="section">
    <div class="container">
      <div class="row">

        <div class="col-md-3">
          <div class="left-sidebar">
            <ul>
              <li><a href="/dashboard">Dashboard</a></li>
              <li><a href="/survey">My Surveys</a></li>
              <li><a href="/survey/add">Add Survey</a></li>
              <li class="active"><a href="#">Edit Survey</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <form method="post" class="login-form">
            <fieldset class="form-group">
              <label for="surveyTitle">Survey Title: *</label>
              <input type="text" name="surveyTitle" class="form-control" value="<%= survey.surveyTitle %>" />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Question 1 : </label>
              <input type="text" name="Ques1" class="form-control" value="<%= survey.shortQuest1 %>" />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Question 2 : </label>
              <input type="text" name="Ques2" class="form-control" value="<%= survey.shortQuest2 %>" />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Question 3 : </label>
              <input type="text" name="Ques3" class="form-control" value="<%= survey.shortQuest3 %>" />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Question 4 : </label>
              <input type="text" name="Ques4" class="form-control" value="<%= survey.shortQuest4 %>" />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Question 5 : </label>
              <input type="text" name="Ques5" class="form-control" value="<%= survey.shortQuest5 %>" />
            </fieldset>
            <fieldset class="form-group row">
              <div class="col-md-6">
                <label for="surveyContent">Active till : </label>
                <input type="date" name="dateCreated" id="dateCreated" class="pull-left">
              </div>
              <div class="col-md-6">
                <label for="surveyContent">Status</label>
                  <div class="radio">
                    <label><input type="radio" name="statusActive">Active</label>
                  </div>
                  <div class="radio">
                    <label><input type="radio" name="statusNotActive">Inactive</label>
                  </div>
              </div>
            </fieldset>
            <fieldset class="form-group text-right row">
              <div class="col-md-4">
                <input type="submit" class="btn btn-success" value="Update" /> 
              </div>
              <div class="col-md-4">
                <a href="/survey">
                  <input type="button" class="btn btn-de" value="Cancel"/>
                </a>                            
              </div>
              <div class="col-md-4">
                <a href="/survey/delete/<%= survey._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                  <input type="button" class="btn btn-blue" value="Delete" />
                </a>
              </div>
            </fieldset>
          </form>

        </div>

      </div>
    </div>
  </section>

<% include ../partials/footer.ejs %>
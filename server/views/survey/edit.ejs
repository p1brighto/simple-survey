<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

  <section id="top-banner" class="section bg-intro intro-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 page-title">
          <h2>Edit your survey : <%= survey.surveyTitle %> </h2>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
      <div class="container">
          <div class="row">
             <div class="col-md-8 col-md-offset-2">
                <form method="post" class="login-form">
                    <fieldset class="form-group">
                        <label for="surveyTitle">Survey Title: *</label>
                        <input name="surveyTitle" class="form-control" required value="<%= survey.surveyTitle %>" />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="surveyContent">Survey Content: *</label>
                        <input name="surveyContent" class="form-control"  required value="<%= survey.surveyContent %>" />
                    </fieldset>
                    <fieldset class="form-group">
                        <input name="idName" type="hidden" class="form-control"  required value="<%= survey.idName %>" />
                    </fieldset>
                    <fieldset class="form-group text-right row">
                        <div class="col-md-4">
                          <input type="submit" class="btn btn-success" value="Update" /> 
                        </div>
                        <div class="col-md-4">
                            <a href="/survey">
                                <input type="button" class="btn btn-warning" value="Cancel"/>
                            </a>                            
                        </div>
                        <div class="col-md-4">
                            <a href="/survey/delete/<%= survey._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                                <input type="button" class="btn btn-blue" value="Delete" />
                            </a>                            
                        </div>
                    </fieldset>
                </form>
            </div> 
          </div>
      </div>
  </section>

<main class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
        </div>
    </div>

</main>
<% include ../partials/footer.ejs %>
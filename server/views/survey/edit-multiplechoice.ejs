            </fieldset>
            <div class="row">
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest3Opt1 %>" name="quest3Opt1" class="form-control" />
              </div>
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest3Opt2 %>" name="quest3Opt2" class="form-control" />                        
              </div>
              <div class="clearfix"></div>
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest3Opt3 %>" name="quest3Opt3" class="form-control" />                       
              </div>
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest3Opt4 %>" name="quest3Opt4" class="form-control" />                        
              </div>
            </div>
            <hr/>
            <fieldset class="form-group">

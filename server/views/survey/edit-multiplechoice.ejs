              <div class="col-md-6">
                <label for="quest">Active till : </label>
                <input type="date" name="activeTill" id="activeTill" class="pull-left">
              </div>
              <div class="col-md-6">
                <label for="quest">Status</label>
                  <div class="radio">
                    <label><input type="radio" name="isActive" checked>Active</label>
                  </div>
                  <div class="radio">
                    <label><input type="radio" name="isActive">Inactive</label>
                  </div>
              </div>
            </fieldset>
            <fieldset class="form-group">
              <input type="hidden" name="displayName" value="<%= displayName %>" class="form-control" />
              <input type="hidden" name="surveyType" value="multipleChoiceQuestion" class="form-control" />
            </fieldset>
            <fieldset class="form-group text-right row">
              <div class="col-md-4">
                <input type="submit" class="btn btn-success" value="Update" /> 
              </div>
              <div class="col-md-4">

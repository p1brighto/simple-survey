<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

  <section id="top-banner" class="section bg-intro intro-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 page-title">
          <h2>Edit your survey : <span class="capitalize edit-title"><%= survey.surveyTitle %></span></h2>
        </div>
      </div>
    </div>
  </section>

  <section id="user-profile" class="section">
    <div class="container">
      <div class="row">

        <div class="col-md-3">
          <div class="left-sidebar">
            <ul>
              <li><a href="/dashboard">Dashboard</a></li>
              <li><a href="/survey">My Surveys</a></li>
              <li><a href="/survey/add">Add Survey</a></li>
              <li class="active"><a href="#">Edit Survey</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <form method="post" class="login-form">

            <fieldset class="form-group">
              <label for="surveyTitle">Survey Title</label>
              <input type="text" value="<%= survey.surveyTitle %>" class="form-control" />
            </fieldset>
            <fieldset class="form-group">
              <label for="quest">Enter your first question</label>
              <input type="text" value="<%= survey.shortQuest1 %>" class="form-control" />
            </fieldset>
            <div class="row">
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest1Opt1 %>" name="quest1Opt1" class="form-control" />
              </div>
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest1Opt2 %>" name="quest1Opt2" class="form-control" />                        
              </div>
              <div class="clearfix"></div>
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest1Opt3 %>" name="quest1Opt3" class="form-control" />                       
              </div>
              <div class="col-md-6">
                <label for="option">Enter Your Option</label>
                <input type="text" value="<%= survey.quest1Opt4 %>" name="quest1Opt4" class="form-control" />                        
              </div>
            </div>
            <hr/>
            <fieldset class="form-group">
              <label for="quest">Enter your second question</label>
              <input type="text" value="<%= survey.shortQuest2 %>" name="shortQuest2" class="form-control" />

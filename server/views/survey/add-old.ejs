<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

  <section id="top-banner" class="section bg-intro intro-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 page-title">
          <h2>Add a New Survey</h2>
        </div>
      </div>
    </div>
  </section>

  <section id="user-profile" class="section">
    <div class="container">
      <div class="row">

        <div class="col-md-3">
          <div class="left-sidebar">
            <ul>
              <li><a href="/dashboard">Dashboard</a></li>
              <li><a href="/survey">My Surveys</a></li>
              <li class="active"><a href="/survey/add">Add Survey</a></li>
              <li><a href="/survey">Edit Survey</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <form method="post" class="login-form">
            <fieldset class="form-group">
              <label for="surveyTitle">Survey Title</label>
              <input type="text" name="surveyTitle" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Enter your first question</label>
              <input type="text" name="shortQuest1" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Enter your second question</label>
              <input type="text" name="shortQuest2" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Enter your third question</label>
              <input type="text" name="shortQuest3" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Enter your forth question</label>
              <input type="text" name="shortQuest4" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group">
              <label for="surveyContent">Enter your fifth question</label>
              <input type="text" name="shortQuest5" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group row">
              <div class="col-md-6">
                <label for="surveyContent">Active till : </label>
                <input type="date" name="dateCreated" id="dateCreated" class="pull-left">
              </div>
              <div class="col-md-6">
                <label for="surveyContent">Status</label>
                  <div class="radio">
                    <label><input type="radio" name="statusActive">Active</label>
                  </div>
                  <div class="radio">
                    <label><input type="radio" name="statusNotActive">Inactive</label>
                  </div>
              </div>
            </fieldset>
            <fieldset class="form-group">
              <input type="hidden" name="displayName" value="<%= displayName %>" class="form-control"  required />
            </fieldset>
            <fieldset class="form-group text-right row">
              <div class="col-md-6">
                <input type="submit" class="btn btn-success" value="Save Survey" /> 
              </div>
              <div class="col-md-6">
                <a href="/survey">
                  <input type="button" class="btn btn-del" value="Cancel"/>
                </a>                            
              </div>
            </fieldset>
          </form>
        </div>

      </div>
    </div>
  </section>

<% include ../partials/footer.ejs %>
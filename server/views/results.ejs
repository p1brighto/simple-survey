<% include partials/header.ejs %>
<% include partials/navbar.ejs %>

<section id="top-banner" class="section bg-intro intro-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 page-title">
        <h2>Survey Results</h2>
      </div>
    </div>
  </div>
</section>

<section id="user-profile" class="section">
  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <div class="left-sidebar">
          <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/survey">My Surveys</a></li>
            <li><a href="/survey/add">Add Survey</a></li>
            <li><a href="/survey">Edit Survey</a></li>
            <li class="active"><a href="/results">Survey Result</a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="col-md-1">#</th>
              <th class="col-md-5">Survey Title</th>
              <th class="col-md-2">Survey Type</th>
              <th class="col-md-2">Responses</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < surveys.length; i++) { %> 
            <tr>
              <td class="col-md-1"><%= i + 1 %></td>
              <td class="col-md-5"><%= surveys[i].surveyTitle %></td>
              <td class="col-md-2"><%= surveys[i].surveyType %></td>
              <td class="col-md-2">
                <a href="/results/<%= surveys[i]._id %>" class="btn-dash"><i class="ion-document-text"></i> View</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>       
      </div>

    </div>
  </div>
</section>

<% include partials/footer.ejs %>
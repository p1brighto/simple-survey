<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

  <section id="top-banner" class="section bg-intro intro-section">
    <div class="container">
      <div class="row">
        <div class="col-md-12 page-title">
          <h2>Edit your profile details</h2>
        </div>
      </div>
    </div>
  </section>

  <section id="user-profile" class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-3">


          <div class="left-sidebar">
            <ul>
              <li><a href="/dashboard">Dashboard</a></li>
              <li><a href="/users/profile">My Account </a></li>
              <li class="active"><a href="#">Edit my Account</a></li>
              <li><a href="/logout">Sign Out</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
            <form method="post" class="login-form">
                <fieldset class="form-group">
                    <label for="firstName">First Name</label>
                    <input name="firstName" class="form-control" value="<%= user.firstName %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="lastName">Last Name</label>
                    <input name="lastName" class="form-control" value="<%= user.lastName %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="phone">Phone</label>
                    <input name="phone" class="form-control" value="<%= user.phone %>" />
                </fieldset>
                <hr/>
                <fieldset class="form-group">
                    <label for="username">Username</label>
                    <input name="username" class="form-control" required value="<%= user.username %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="displayName">Display Name</label>
                    <input name="displayName" class="form-control" required value="<%= user.displayName %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="password">Password</label>
                    <input name="password" class="form-control" required value="<%= user.password %>" />
                </fieldset>
                <fieldset class="form-group">
                    <label for="email">Email</label>
                    <input name="email" class="form-control" required value="<%= user.email %>" />
                </fieldset>
                <hr/>
                <fieldset class="form-group text-right row">
                  <div class="col-md-4">
                    <input type="submit" class="btn" value="Update" />
                  </div>
                  <div class="col-md-4">
                    <a href="/users/profile">
                      <input type="button" class="btn btn-warning" value="Cancel"/>
                    </a>
                  </div>
                  <div class="col-md-4">
                    <a href="/users/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                      <input type="button" class="btn btn-blue" value="Delete" />
                    </a>
                  </div>
                </fieldset>
            </form>
        </div>
      </div>
    </div>
  </section>

<% include ../partials/footer.ejs %>
<% include partials/header.ejs %>
<% include partials/navbar.ejs %>

<section id="top-banner" class="section bg-intro intro-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 page-title">
        <h2>Survey Results</h2>
      </div>
    </div>
  </div>
</section>

<section id="user-profile" class="section">
  <div class="container">
    <div class="row">

      <div class="col-md-3">
        <div class="left-sidebar">
          <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/survey">My Surveys</a></li>
            <li><a href="/survey/add">Add Survey</a></li>
            <li><a href="/survey">Edit Survey</a></li>
            <li class="active"><a href="/results">Survey Result</a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
				<% for (var i = 0; i < answers.length; i++) { %> 
				  <h3><%= answers[i].surveyTitle %></h3>
				  <hr class="medium">
				  <% if (answers[i].surveyType == 'shortQuestion') { %>
				  	<ul class="questions">
				  		<li><strong>Question 1</strong></li>
					    <li><%= answers[i].shortAnswer1 %></li>
					    <li><strong>Question 2</strong></li>
					    <li><%= answers[i].shortAnswer2 %></li>
					    <li><strong>Question 3</strong></li>
					    <li><%= answers[i].shortAnswer3 %></li>
					    <li><strong>Question 4</strong></li>
					    <li><%= answers[i].shortAnswer4 %></li>
					    <li><strong>Question 5</strong></li>
					    <li><%= answers[i].shortAnswer5 %></li>
					  </ul>
				  <% } else { %>
				  	<ul class="questions">
				  		<li><strong>Question 1</strong></li>
					    <li><%= answers[i].answer1Opt1 %></li>
					    <li><%= answers[i].answer1Opt2 %></li>
					    <li><%= answers[i].answer1Opt3 %></li>
					    <li><%= answers[i].answer1Opt4 %></li>
				  		<li><strong>Question 2</strong></li>
					    <li><%= answers[i].answer2Opt1 %></li>
					    <li><%= answers[i].answer2Opt2 %></li>
					    <li><%= answers[i].answer2Opt3 %></li>
					    <li><%= answers[i].answer2Opt4 %></li>
				  		<li><strong>Question 3</strong></li>
					    <li><%= answers[i].answer3Opt1 %></li>
					    <li><%= answers[i].answer3Opt2 %></li>
					    <li><%= answers[i].answer3Opt3 %></li>
					    <li><%= answers[i].answer3Opt4 %></li>
				  		<li><strong>Question 4</strong></li>
					    <li><%= answers[i].answer4Opt1 %></li>
					    <li><%= answers[i].answer4Opt2 %></li>
					    <li><%= answers[i].answer4Opt3 %></li>
					    <li><%= answers[i].answer4Opt4 %></li>
				  		<li><strong>Question 5</strong></li>
					    <li><%= answers[i].answer5Opt1 %></li>
					    <li><%= answers[i].answer5Opt2 %></li>
					    <li><%= answers[i].answer5Opt3 %></li>
					    <li><%= answers[i].answer5Opt4 %></li>
					  </ul>
				  <% } %>
				  <hr/>
				<% } %>
			</div>

		</div>
	</div>
</section>

<% include partials/footer.ejs %>